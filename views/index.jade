extends layout

block append content
    .tabbable.tabs-left
      ul.nav.nav-tabs
        each exerciseNumber in exerciseNumbers
            li: a(href="#tab#{exerciseNumber}", data-toggle="tab") Exercise #{exerciseNumber}
      .tab-content
        - var i = 1;
        - var len = Object.keys(exercises).length;
        each exercise, id in exercises
            if i == len
                div.active.tab-pane(id="#{id}")
                    !{exercise}
            else
                div.tab-pane(id="#{id}")
                    !{exercise}
            - i++;
